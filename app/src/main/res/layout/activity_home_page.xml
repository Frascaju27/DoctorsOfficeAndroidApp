<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="a2101020604.a2101020604.HomePage">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="382dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/healthcarelogo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/HomeRadio"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/HomeRadio"
        android:layout_width="305dp"
        android:layout_height="264dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <RadioButton
            android:id="@+id/InsertPatient"
            android:layout_width="303dp"
            android:layout_height="52dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@android:color/background_dark"
            android:text="Insert Patient"
            android:textAlignment="inherit"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/Tests"
            android:layout_width="311dp"
            android:layout_height="59dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@android:color/background_dark"
            android:text="Insert Test"
            android:textAlignment="gravity"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/PatientsResults"
            android:layout_width="296dp"
            android:layout_height="61dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@android:color/background_dark"
            android:text="Patients Results"
            android:textAlignment="inherit"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RadioGroup>


</android.support.constraint.ConstraintLayout>
